<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exampleTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Demo PDF from assets" />

        <TextView
            android:id="@+id/exampleDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="This example shows the demo document stored within the App's assets." />
    </LinearLayout>

    <com.google.android.material.chip.Chip
        android:id="@+id/kotlinBadge"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:text="@string/language_kotlin"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="#DDFFFFFF"
        app:chipBackgroundColor="@color/java_orange" />

    <com.google.android.material.chip.Chip
        android:id="@+id/javaBadge"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:text="@string/language_java"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="#DDFFFFFF"
        app:chipBackgroundColor="@color/java_blue" />
</LinearLayout>